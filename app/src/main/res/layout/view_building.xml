<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_bld_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_large"
                android:paddingStart="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium">

                <!--<TextView-->
                <!--android:id="@+id/tv_apartment_no"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:fontFamily="@font/opensansregular"-->
                <!--android:gravity="center_vertical"-->
                <!--android:maxLines="2"-->
                <!--android:minLines="2"-->
                <!--android:layout_toLeftOf="@+id/btn_edit"-->
                <!--android:textColor="@color/text_primary"-->
                <!--android:textSize="14sp"-->
                <!--tools:text="Buiding Name" />-->
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_apartment_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/btn_edit"
                    android:fontFamily="@font/opensanslight"
                    android:paddingRight="@dimen/padding_small"
                    android:text="Task #1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_medium" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    app:srcCompat="@drawable/ic_edit" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_rooms_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_residents_label"
                android:layout_alignRight="@+id/tv_residents_label"
                android:layout_below="@id/layout_bld_name"
                android:paddingEnd="@dimen/padding_large"
                android:paddingStart="@dimen/padding_large"
                android:text="@string/label_apartments"

                android:textColor="@color/text_gray_1"
                android:textSize="@dimen/text_ex_small" />

            <TextView
                android:id="@+id/tv_total_rooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_rooms_label"
                android:layout_toEndOf="@id/tv_rooms_label"
                android:fontFamily="@font/opensansbold"
                android:text="32"
                android:textColor="@color/text_gray_1"
                android:textSize="@dimen/text_ex_small" />

            <TextView
                android:id="@+id/tv_residents_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rooms_label"
                android:fontFamily="@font/opensansregular"
                android:paddingBottom="@dimen/padding_large"
                android:paddingEnd="@dimen/padding_ex_large"
                android:paddingStart="@dimen/padding_large"
                android:text="@string/label_residents"
                android:textColor="@color/text_gray_1"
                android:textSize="@dimen/text_ex_small" />


            <TextView
                android:id="@+id/tv_total_residents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_residents_label"
                android:layout_toEndOf="@id/tv_residents_label"
                android:fontFamily="@font/opensansbold"
                android:textColor="@color/text_gray_1"
                android:textSize="@dimen/text_ex_small"
                tools:text="120" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>