<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensanslight"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                tools:text="Sector 40" />


            <TextView
                android:id="@+id/tv_buildings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_task_name"
                android:fontFamily="@font/opensansregular"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="@string/buildings"
                android:textColor="@color/colorAccent" />


            <TextView
                android:id="@+id/tv_total_buildings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_buildings_label"
                android:layout_toEndOf="@id/tv_buildings_label"
                android:fontFamily="@font/opensansbold"
                android:textColor="@color/text_primary"
                tools:text="55" />

            <TextView
                android:id="@+id/tv_rooms_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_buildings_label"
                android:fontFamily="@font/opensansregular"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="@string/apartments"
                android:textColor="@color/colorAccent" />


            <TextView
                android:id="@+id/tv_total_rooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_rooms_label"
                android:layout_toEndOf="@id/tv_rooms_label"
                android:fontFamily="@font/opensansbold"
                android:textColor="@color/text_primary"
                tools:text="32" />

            <TextView
                android:id="@+id/tv_residents_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rooms_label"
                android:fontFamily="@font/opensansregular"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="@string/residents"
                android:textColor="@color/colorAccent" />


            <TextView
                android:id="@+id/tv_total_residents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_residents_label"
                android:layout_toEndOf="@id/tv_residents_label"
                android:fontFamily="@font/opensansbold"
                android:textColor="@color/text_primary"
                tools:text="120" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</FrameLayout>